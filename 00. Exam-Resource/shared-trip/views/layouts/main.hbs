<html lang="en">

<head>
    <!-- Do not forget to change the path to the css file -->
    <link rel="stylesheet" href="/css/style.css">
    <title>Home Page</title>
</head>

<body>
    {{owner}}
    {{bought}}
    <!-- In case of error, you should display div with class "error" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <!-- <div class="error">
        <p>Error message - 1</p>
        <p>Error message - 2</p>
    </div> -->
    {{!-- TODO --}}
    {{#if errors}}
       
        <div class="error">
            {{#each errors}}
                {{>err}}
            {{/each}}
        </div>
     
    {{/if}}
    {{#if error}}
       
        <div class="error">
            <p>{{error.message}}</p>
        </div>
     
    {{/if}}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <!-- Do not forget to change the path to the images -->
            <img class="logo" src="/images/before.png" alt="before-logo">
            <img class="car logo" src="/images/trip-logo.png" alt="trip-logo">
            <img class="logo" src="/images/after.png" alt="after-logo">
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav ml-auto">
                    <!-- Guest users and Logged users -->
                    <li class="nav-item"></li>> <a class="nav-link">{{isOwner}}
    {{isBought}}</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/trips/offers">Shared Trips</a>
                    </li>
                    {{#if isAuthenticated}}
                    <li class="nav-item">
                        <a class="nav-link" href="/trips/create">Offer Trip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/logout">Logout as [ {{email}} ]</a>
                    </li>
                    {{else}}
                    <!-- Guest users -->
                    <li class="nav-item">
                        <a class="nav-link" href="/user/login">Login</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/user/register">Register</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>

    <main>

        {{{body}}}
    </main>

    <footer id="sticky-footer" class="bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Shared Trip 2021</p>
        </div>
    </footer>
</body>

</html>