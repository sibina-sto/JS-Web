
        <section class="py-5 details" id="trip-details-page">
            <div class="container">
                <div class="destination">
                    <div>
                        <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                        <h5> from <span>{{data.startPoint}}</span> to <span>{{data.endPoint}}</span> </h5>
                    </div>
                    <div>
                        <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                        <h5> <span>{{data.date}}</span> at <span>{{data.time}}</span> </h5>
                    </div>
                </div>
                <p class="line"></p>
                <div class="buddies-info">
                    <i class="fas fa-users buddies"></i>
                    <h5>Shared trip Buddies</h5>
                    <div>
                        {{!-- TODO --}}
                        {{#if buddies}}
                        <!-- if there are joined buddies for the current trip separate them with comma and space", " -->
                        <p>{{buddies}}</p>
                        {{else}}
                        <!-- If not display: -->
                        <p>there are no buddies yet...</p>
                        {{/if}}
                    </div>
                    <h5>Driver: <span>{{data.owner.email}}</span> </h5>
                </div>
                <p class="line"></p>
                <h5 class="brand">Car Brand: <span class="lead">{{data.brand}}</span></h5>
                <div class="trip-info">
                    <div>
                        <img class="img-fluid rounded"
                            src="{{data.img}}"
                            alt="car-image">
                    </div>
                    <div class="trip-desc">
                        <h5>Information about the trip</h5>
                        <textarea class="lead"
                            disabled>{{data.description}}</textarea>
                        <h5>Price: <span class="lead">{{data.price}}</span> BGN</h5>
                         {{#if isAuthenticated}}
                        
                        <!-- if there are no logged in user do not show div with class actions  -->
                        <div class="actions">
                            {{#if owner}}
                            <!-- Only for logged user and creator to this trip -->
                            <a href="/trips/{{data._id}}/delete" class="btn btn-danger">Delete this trip</a>
                            <a href="/trips/{{data._id}}/edit" class="btn btn-warning">Edit this trip</a>
                            {{else}}
                            {{#if isBought}}
                            <!-- logged in user and has already joined the trip  -->
                            <span class="btn btn-info">Already joined. Don't be late!</span>
                            {{else}}
                            {{#if isSpace}}
                            <!-- logged in user with available seats -->
                            <a href="/trips/{{data._id}}/buy" class="btn btn-join">Join now, [ {{isSpace}} ] seats left!</a>
                            {{else}}
                            <!-- logged in user with no available seats -->
                            <span class="btn btn-secondary">No seats available! [0]</span>
                            {{/if}}
                            {{/if}}
                            {{/if}}

                        </div>
                        {{/if}}

                    </div>
                </div>
            </div>
        </section>
